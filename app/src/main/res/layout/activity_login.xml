<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cacw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hadesky.app.cacw.LoginActivity">
    <android.support.v7.widget.Toolbar
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        cacw:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@android:color/white"
            android:text="登录"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>

    <com.hadesky.app.cacw.CircularImage
        cacw:circle_width="2dp"
        cacw:circle_color="@android:color/white"
        android:id="@+id/login_icon"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <!--<TextView-->
        <!--android:text="蚂蚁社团"-->
        <!--android:textSize="20sp"-->
        <!--android:layout_alignTop="@id/login_icon"-->
        <!--android:layout_marginTop="110dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

        <com.hadesky.app.cacw.DeletableEditText
            android:id="@+id/login_username"
            android:layout_marginTop="270dp"
            cacw:clear_icon="@drawable/ic_clear_grey600_18dp"
            cacw:underline_color="#BFBFBFBF"
            android:inputType="textEmailAddress"
            android:background="@drawable/login_edittext"
            android:textCursorDrawable="@null"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="邮箱/手机号"
            android:imeOptions="actionNext"/>
        <com.hadesky.app.cacw.DeletableEditText
            android:id="@+id/login_password"
            android:layout_alignTop="@id/login_username"
            android:layout_marginTop="40dp"
            cacw:clear_icon="@drawable/ic_clear_grey600_18dp"
            cacw:underline_color="#FFFFFF"
            android:inputType="textPassword"
            android:background="@drawable/login_edittext"
            android:textCursorDrawable="@null"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="密码"
            android:imeOptions="actionGo"/>

    <Button
        android:id="@+id/login_login_button"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="登录"
        android:layout_alignTop="@id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/login_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:onClick="btOnClick"/>
    <TextView
        android:text="忘记密码？"
        android:linksClickable="true"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="新用户注册"
        android:linksClickable="true"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
