<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cacw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hadesky.app.cacw.LoginActivity">
    <ImageView
        android:id="@+id/icon_bg"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_image_bg"
        android:contentDescription="@null"
        android:layout_width="110dp"
        android:layout_height="110dp" />
    <com.hadesky.app.cacw.CircularImage
        android:id="@+id/login_icon"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_username"
        android:layout_marginTop="230dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.hadesky.app.cacw.DeletableEditText
            cacw:clear_icon="@drawable/ic_clear_grey600_18dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/login_edittext"
            android:textCursorDrawable="@null"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
